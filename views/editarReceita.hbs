<div class="row justify-content-center">
  <div class="col-md-10">
    <h2 class="mb-4">Alterar Receita</h2>
    
    <form method="POST" action="/receita/editar/{{receita.id}}">
      <div class="mb-3">
        <label for="titulo" class="form-label">Título da Receita</label>
        <input type="text" class="form-control" id="titulo" name="titulo" value="{{receita.titulo}}" required>
      </div>

      <div class="mb-3">
        <label for="ingredientes" class="form-label">Ingredientes</label>
        <div class="form-text mb-1">Digite cada ingrediente em uma nova linha</div>
        <textarea class="form-control" id="ingredientes" name="ingredientes" rows="5" required>{{receita.ingredientes}}</textarea>
      </div>

      <div class="mb-3">
        <label for="preparo" class="form-label">Modo de Preparo</label>
        <div class="form-text mb-1">Descreva passo a passo o modo de preparo</div>
        <textarea class="form-control" id="preparo" name="preparo" rows="5" required>{{receita.preparo}}</textarea>
      </div>

      <div class="mb-4">
        <label for="tempo" class="form-label">Tempo de Preparo (minutos)</label>
        <input type="number" class="form-control" id="tempo" name="tempo" min="1" value="{{receita.tempo}}" required>
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-save"></i> Salvar Alterações
        </button>
        <a href="/" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
      </div>
    </form>
  </div>
</div>
