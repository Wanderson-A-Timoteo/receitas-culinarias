<div class="row justify-content-center">
  <div class="col-md-10">
    <div class="card shadow">
      <div class="card-header bg-info text-white">
          <h3 class="mb-0"><i class="bi bi-journal-text"></i> {{receita.titulo}}</h3>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <h5 class="text-primary">Tempo de Preparo</h5>
            <p class="lead"><i class="bi bi-clock"></i> {{receita.tempo}} minutos</p>
          </div>
        </div>

        <div class="mb-4">
          <h5 class="text-primary">Ingredientes</h5>
          <pre class="bg-light p-3 border rounded">{{receita.ingredientes}}</pre>
        </div>

        <div class="mb-4">
            <h5 class="text-primary">Modo de Preparo</h5>
            <pre class="bg-light p-3 border rounded">{{receita.preparo}}</pre>
        </div>
      </div>
      <div class="card-footer bg-light d-flex justify-content-between">
        <a href="/" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Voltar
        </a>
        <div>
          <a href="/receita/editar/{{receita.id}}" class="btn btn-warning">
              <i class="bi bi-pencil"></i> Alterar
          </a>
          <a href="/receita/excluir/{{receita.id}}" class="btn btn-danger">
              <i class="bi bi-trash"></i> Excluir
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
